{
    "name": "iridium-vue",
    "version": "0.2.3",
    "description": "A UI framework with no UI",
    "main": "dist/index.js",
    "module": "dist/index.es.js",
    "scripts": {
        "clean": "rm -rf dist",
        "watch": "run-s clean && run-p watch:es watch:cjs",
        "build": "run-s clean && run-p build:es build:cjs",
        "build:es": "NODE_ENV=es rollup -c",
        "build:cjs": "NODE_ENV=cjs rollup -c",
        "watch:es": "NODE_ENV=es rollup -c -w",
        "watch:cjs": "NODE_ENV=cjs rollup -c -w",
        "test": "./node_modules/.bin/jest",
        "style": "./node_modules/.bin/eslint .eslintrc --ext .js,.vue src tests",
        "style:fix": "./node_modules/.bin/eslint .eslintrc --ext .js,.vue src tests --fix",
        "prepublish": "run-s style:fix && run-s test",
        "precommit": "run-s style:fix && run-s test"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/iridiumui/iridium.git"
    },
    "keywords": [
        "Vue",
        "Components",
        "UI",
        "Framework",
        "Renderless"
    ],
    "author": "Bj√∏rn Lindholm",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/iridiumui/iridium/issues"
    },
    "homepage": "https://iridiumui.com",
    "peerDependencies": {
        "vue": "^2.1.0"
    },
    "devDependencies": {
        "@babel/core": "^7.1.2",
        "@babel/plugin-external-helpers": "^7.0.0",
        "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
        "@babel/plugin-transform-runtime": "^7.1.0",
        "@babel/preset-env": "^7.1.0",
        "@vue/test-utils": "^1.0.0-beta.25",
        "babel-core": "^7.0.0-bridge.0",
        "babel-jest": "^23.6.0",
        "babel-loader": "^8.0.4",
        "eslint": "^5.7.0",
        "eslint-plugin-jest": "^21.26.1",
        "eslint-plugin-vue": "^4.7.1",
        "focus-trap": "^3.0.0",
        "jest": "^23.6.0",
        "lodash": "^4.17.11",
        "match-media-mock": "^0.1.0",
        "npm-run-all": "^4.1.3",
        "regenerator-runtime": "^0.12.1",
        "rollup-plugin-babel": "^4.0.3",
        "rollup-plugin-commonjs": "^9.2.0",
        "rollup-plugin-node-resolve": "^3.4.0",
        "rollup-plugin-vue": "^4.3.2",
        "vue": "^2.5.17",
        "vue-jest": "^3.0.0",
        "vue-loader": "^15.4.2",
        "vue-template-compiler": "^2.5.17"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "vue"
        ],
        "transform": {
            ".*\\.(vue)$": "vue-jest",
            "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
        }
    },
    "dependencies": {
        "@babel/runtime": "^7.1.2"
    }
}
